{
  "name": "flex-plugins-utils",
  "private": true,
  "description": "Flex Plugins Utility Libraries",
  "homepage": "https://github.com/twilio/flex-plugins-utils#readme",
  "bugs": {
    "url": "https://github.com/twilio/flex-plugins-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twilio/flex-plugins-utils.git"
  },
  "license": "MIT",
  "contributors": [
    "Kousha Talebian <k@ousha.me>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "postinstall": "lerna bootstrap --no-ci",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "publish:next": "bin/publish",
    "publish:public": "bin/publish public",
    "test": "jest --color",
    "test:ci": "jest --clearCache && jest --coverage --color",
    "test:watch": "jest --watchAll --color"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "flex-plugins-utils-env": "file:packages/flex-plugins-utils-env",
    "flex-plugins-utils-exception": "file:packages/flex-plugins-utils-exception",
    "flex-plugins-utils-logger": "file:packages/flex-plugins-utils-logger",
    "flex-plugins-utils-spawn": "file:packages/flex-plugins-utils-spawn"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/table": "^4.0.7",
    "@types/wrap-ansi": "^3.0.0",
    "codecov": "^3.7.2",
    "eslint": "^7.9.0",
    "eslint-config-twilio-ts": "^1.29.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "ts-jest": "^26.4.0",
    "typescript": "^3.9.7"
  }
}
